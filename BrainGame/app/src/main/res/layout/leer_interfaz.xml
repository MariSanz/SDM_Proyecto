<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/background_material_dark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reconocer el color"
        android:id="@+id/tvDescripcionInt"
        android:textSize="30sp"
        android:textColor="@color/text"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_weight="0.11" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.08"
        android:id="@+id/tableRowPuntos">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:id="@+id/tvPuntuacionInt"
            android:layout_weight="0.06"
            android:text="@string/leer_puntos"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:textColor="@color/text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:id="@+id/tvPuntosInt"
            android:layout_weight="0.14"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:textColor="@color/text"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04"
        android:id="@+id/tableRowTiempo"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:text="@string/leer_tiempo"
            android:id="@+id/tvTiempoInt"
            android:layout_weight="0.29"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:id="@+id/tvTiempoRestanteInt"
            android:layout_weight="0.68"
            android:textSize="20sp"
            android:textColor="@color/text"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.27"
        android:id="@+id/tableRowPalabra"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:id="@+id/tvPalabraInt"
            android:paddingLeft="150dp"
            android:paddingTop="30dp"
            android:textSize="40sp"/>
    </TableRow>

    <Button
        android:layout_width="204dp"
        android:layout_height="37dp"
        android:text="@string/leer_atras"
        android:id="@+id/btAtrasInt"
        android:layout_gravity="right"
        android:textSize="25sp"
        android:textColor="@color/text"
        android:onClick="irAtras"
        android:textAllCaps="false"
        android:background="@drawable/button_boarder"/>

</LinearLayout>