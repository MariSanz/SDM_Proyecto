<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reconocer el color"
        android:id="@+id/textViewDescripcion"
        android:textSize="30sp"
        android:textColor="#000000"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_weight="0.11" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.08"
        android:id="@+id/tableRowPuntos">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:id="@+id/textViewPuntuacion"
            android:layout_weight="0.01"
            android:text="@string/leer_puntos"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:id="@+id/textViewPuntos"
            android:layout_weight="0.14"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:textColor="#000000"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04"
        android:id="@+id/tableRowTiempo"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:text="@string/leer_tiempo"
            android:id="@+id/textViewTiempo"
            android:layout_weight="0.29"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:id="@+id/textViewTiempoRestante"
            android:layout_weight="0.68"
            android:textSize="20sp"
            android:textColor="#000000"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.38"
        android:id="@+id/tableRowPalabra"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:id="@+id/textViewPalabra"
            android:paddingLeft="150dp"
            android:paddingTop="30dp" />
    </TableRow>

    <Button
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:text="@string/leer_atras"
        android:id="@+id/btAtras"
        android:layout_gravity="right"
        android:onClick="irAtras" />

</LinearLayout>